<h2>Lista categorías</h2>

<%= link_to 'Nueva categoría', new_categoria_path %>

<ul>
  <% @categorias.each do |categoria| %>
    <li>
      <%= categoria.nombre %>
      <%= link_to :Editar, edit_categoria_path(categoria.id) %>
      <%= button_to :Eliminar, categoria_path(categoria.id), {method: :delete} %>
    </li>
  <% end %>
</ul>